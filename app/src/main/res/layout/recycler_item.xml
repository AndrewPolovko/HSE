<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/common_content_margin"
    android:layout_marginEnd="@dimen/common_content_margin"
    android:layout_marginBottom="@dimen/card_spacing"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_content_margin"
        android:layout_marginBottom="@dimen/common_content_margin"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_content_margin"
        android:paddingEnd="@dimen/common_content_margin"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:layout_marginBottom="@dimen/common_content_margin_small"
            android:gravity="top"
            tools:src="@tools:sample/backgrounds/scenic"
            />

        <TextView
            android:id="@+id/creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/card_title_height"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names"
            />

        <TextView
            android:id="@+id/dimensions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textSize="@dimen/card_description_height"
            tools:text="@tools:sample/lorem/random"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>